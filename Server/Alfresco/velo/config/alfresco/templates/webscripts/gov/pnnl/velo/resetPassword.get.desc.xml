<webscript>
  <shortname>Reset Password</shortname>
  <description>Resets the user's password and sends to them in an email.  Account is looked up by email address or username</description>
  <url>/velo/resetPassword?usersEmail={usersEmail}&amp;username={username}&amp;sitename={sitename}</url>
  <!--  the user/request can't be authenticated as they don't know their username -->
  <authentication>none</authentication>
  <!--  we don't require default tx because we manage our own retrying tx -->
  <transaction>none</transaction>
    
</webscript>